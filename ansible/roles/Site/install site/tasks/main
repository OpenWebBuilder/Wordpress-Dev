---

- name: Is site installed?
  ansible.builtin.stat:
    path: "{{wordpress_home}}/wp-content/uploads"
  register: uploads

- name: Install Site with wp-cli
  command: "wp core install --url={{dev_url}} --title='{{dev_site_title}}' --admin_user={{admin_user}}--admin_password={{dev_admin_password}} --admin_email={{dev_admin_email}} --skip-email"
  args:
    chdir: "{{wordpress_home}}"
    creates: "{{wordpress_home}}/wp-content/uploads"
  # when: not (uploads.stat.isdir is defined and uploads.stat.isdir)
